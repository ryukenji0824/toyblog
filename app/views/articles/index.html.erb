<div class = "container">
  <div class="row">
    <% @article.each do |article| %>
      <%= link_to article do%>
        <div class = "col-md-3 margin-top-5per article-block">
          <% if article.image_id.present? %>
            <%= image_tag attachment_url(article, :image), class:"img-responsive padding-top-15" %>
          <% else %>  
            <%= image_tag"syde.jpg", class:"img-responsive padding-top-15 margin-bottom-15", alt: "画像がないぜ！" %>
              <p class="syde">画像がないぜ！</p>
          <% end %>
          <div>
            <p class="title"><%= article.title %></p>
            <span>
              <%= article.created_at.strftime("%Y年%m月%d日") %>
            </span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <%= link_to "新規作成", new_article_path, class:'margin-top-5per btn btn-primary' %>
  </div>
</div>
